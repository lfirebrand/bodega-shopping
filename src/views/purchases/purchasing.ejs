<% const purchase = item.getPurchaseFor(currentUser.id) %> <% if (purchase) { %>
<form
  style="display: initial;"
  action="/lists/<%= item.listId %>/items/<%= item.id %>/purchases/<%= purchase.id %>/destroy"
  method="post"
>
  <button type="submit" class="btn btn-outline-danger">
    <i class="far fa-times-circle"></i>
    Mark as Not Purchased
  </button>
</form>
<% } else { %>
<form
  style="display: initial;"
  action="/lists/<%= item.listId %>/items/<%= item.id %>/purchases/create"
  method="post"
>
  <button type="submit" class="btn btn-outline-primary">
    <i class="far fa-check-square"></i>
    Mark as Purchased
  </button>
</form>
<% } %>
