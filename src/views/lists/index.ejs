<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Your Lists</h1>
      <p>Where are you headed to first?</p>

      <ul class="list-group">
        <!-- #1 -->
        <% lists.forEach((list) => { %>
        <!-- #2 -->
        <li class="list-group-item">
          <a href="/lists/<%= list.id %>"> <%= list.listName %> </a>
        </li>
        <% }) %>
      </ul>
      <br />
      <a href="/lists/new" class="btn btn-success">New List</a>
    </main>
  </body>
</html>
