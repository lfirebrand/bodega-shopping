<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>
      <h1>Edit Item</h1>

      <form
        action="/lists/<%= item.listId %>/items/<%= item.id %>/update"
        method="post"
      >
        <div class="form-group">
          <label for="itemName">Item name</label>
          <input
            value="<%= item.itemName %>"
            type="text"
            class="form-control"
            name="itemName"
            aria-describedby="itemNameHelp"
            placeholder="Enter Item Name"
          />
        </div>
        <div class="form-group">
          <label for="quantity">Quantity</label>
          <input type="number" class="form-control" name="quantity" textarea
          rows="4" class="form-control" name="body" placeholder=<%=
          item.quantity %> />
        </div>
        <div class="form-group">
          <label for="purchased">Already purchased?</label>
          <input
            type="checkbox"
            class="form-control"
            name="purchased"
            aria-describedby="itemPurchasedHelp"
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>
    <% include ../static/partials/baseScript.ejs %>
  </body>
</html>
