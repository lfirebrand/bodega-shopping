<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>
      <h1>New Item</h1>
      <form action="/lists/<%= listId %>/items/create" method="post">
        <div class="form-group">
          <label for="itemName">Item name</label>
          <input
            type="text"
            class="form-control"
            name="itemName"
            aria-describedby="itemNameHelp"
            placeholder="Enter Item Name"
          />
        </div>
        <div class="form-group">
          <label for="quantity">Quantity</label>
          <input
            type="number"
            class="form-control"
            name="quantity"
            aria-describedby="itemQuantityHelp"
            placeholder="0"
          />
        </div>
        <div class="form-group">
          <label for="purchased">Already purchased?</label>
          <input
            type="checkbox"
            class="form-control"
            name="purchased"
            aria-describedby="itemPurchasedHelp"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
    <% include ../static/partials/baseScript.ejs %>
  </body>
</html>
